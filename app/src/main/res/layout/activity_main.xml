<?xml version="1.0" encoding="utf-8"?>
<!-- Hauptlayout, enthÃ¤lt alles, siehe MainActitvity -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:tint="@color/mainBackgroundTint" />

    <View
        android:id="@+id/vBackgroundOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundOverlayLoading" />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:elevation="1dp"
        android:padding="14dp"
        android:src="@drawable/ic_filter_variant"
        android:tint="@color/snow" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/ivTit"
            android:layout_width="wrap_content"
            android:layout_height="35sp"
            android:src="@drawable/title"/>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ivTit"
            android:id="@+id/lyClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_account_group"
                android:tint="@color/snow" />

            <TextView
                android:letterSpacing="0.1"
                android:id="@+id/tvClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/snow"
                android:textSize="13sp"
                tools:text="6/4" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:textSize="14sp"
        android:layout_marginTop="42dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header"
        android:id="@+id/tvNothing"
        android:textColor="#7dffffff"
        android:text="@string/noEntries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingTop="134dp" />

    <com.victor.loading.rotate.RotateLoading
        android:id="@+id/loadingView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        app:loading_color="@color/snow"
        app:loading_width="3dp" />

    <fragment
        android:id="@+id/fragmentErr"
        android:name="com.titaniel.bvcvertretungsplan.main_activity.error_fragment.ErrorFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="-4dp"
        android:layout_marginStart="-4dp"
        tools:layout="@layout/fragment_error"
        tools:visibility="invisible" />

    <fragment
        android:id="@+id/fragmentCourseSettings"
        android:name="com.titaniel.bvcvertretungsplan.main_activity.class_settings.ClassSettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        tools:layout="@layout/fragment_class_settings"
        tools:visibility="invisible" />

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.titaniel.bvcvertretungsplan.main_activity.login_fragment.LoginFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        tools:layout="@layout/fragment_class_settings"
        tools:visibility="invisible" />

</RelativeLayout>