<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingTop="25dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.2">

                <com.titaniel.bvcvertretungsplan.my_viewpager.MyViewPager
                    android:id="@+id/dayPager"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:overScrollMode="never" />

                <RelativeLayout
                    android:layout_below="@id/dayPager"
                    android:id="@+id/dividerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingTop="32dp"
                    android:paddingBottom="32dp">

                    <com.rd.PageIndicatorView
                        android:id="@+id/indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:piv_animationType="color"
                        app:piv_count="5"
                        app:piv_dynamicCount="true"
                        app:piv_interactiveAnimation="true"
                        app:piv_padding="12dp"
                        app:piv_radius="3dp"
                        app:piv_selectedColor="@color/indicatorSelected"
                        app:piv_unselectedColor="@color/indicatorUnselected"
                        app:piv_viewPager="@id/dayPager"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"/>

                    <View
                        android:id="@+id/vDivLeft"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toStartOf="@+id/indicator"
                        android:background="@color/snow" />

                    <View
                        android:id="@+id/vDivRight"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_toEndOf="@+id/indicator"
                        android:background="@color/snow" />

                </RelativeLayout>

            </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <com.titaniel.bvcvertretungsplan.my_viewpager.MyViewPager
        android:id="@+id/mainPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />


</android.support.design.widget.CoordinatorLayout>
