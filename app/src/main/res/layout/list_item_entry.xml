<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingBottom="16dp"
    android:paddingTop="20dp">
    <!-- man beachte die 4 dp unterschied zwischen top und bottom-->

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/tags"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/tvSpec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/_border_course"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:paddingBottom="7dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="7dp"
            android:text="Pnwi"
            android:textColor="@color/border_course"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/tvBreakOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/_border_break_out"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:paddingBottom="7dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="7dp"
            android:text="@string/breakOut"
            android:textColor="@color/border_break_out"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/tvTeacherChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/_border_teacher_change"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:paddingBottom="7dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="7dp"
            android:text="@string/teacherChange"
            android:textColor="@color/border_teacher_change"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/tvLessonChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/_border_lesson_change"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:paddingBottom="7dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="7dp"
            android:text="@string/lessonChange"
            android:textColor="@color/border_lesson_change"
            android:textSize="16sp" />

        <TextView
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/tvRoomChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/_border_room_change"
            android:fontFamily="sans-serif"
            android:includeFontPadding="false"
            android:paddingBottom="7dp"
            android:paddingEnd="24dp"
            android:paddingStart="24dp"
            android:paddingTop="7dp"
            android:text="@string/roomChange"
            android:textColor="@color/border_room_change"
            android:textSize="16sp" />

    </org.apmem.tools.layouts.FlowLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tags">

        <TextView
            android:id="@+id/tvHours"
            android:layout_width="82dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:text="1-2"
            android:textColor="@color/snow"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/layoutLesson"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/tvHours"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dotLesson"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_dot"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvLesson"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="MA"
                android:textColor="@color/snow"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dotRoom"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_dot"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="304"
                android:textColor="@color/snow"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/layoutLesson"
            android:layout_toStartOf="@id/layoutRoom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dotTeacher"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_dot"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTeacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="Frau Bellmann"
                android:textColor="@color/snow"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutTeacher"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/tvHours"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:text="Ausfall"
            android:textColor="@color/snow"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>